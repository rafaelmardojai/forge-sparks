<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop">
  <id>@app_id@</id>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <translation type="gettext">@app_id@</translation>

  <name translate="no">Forge Sparks</name>
  <summary>Get Git forges notifications</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <url type="homepage">https://github.com/rafaelmardojai/forge-sparks</url>
  <url type="bugtracker">https://github.com/rafaelmardojai/forge-sparks/issues</url>
  <url type="donation">https://mardojai.com/donate/</url>
  <url type="translate">https://hosted.weblate.org/engage/forge-sparks/</url>
  <url type="vcs-browser">https://github.com/rafaelmardojai/forge-sparks</url>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translate="no">Rafael Mardojai CM</developer_name>
  <developer id="com.mardojai">
      <name translate="no">Rafael Mardojai CM</name>
  </developer>
  <update_contact>email_AT_rafaelmardojai.com</update_contact>

  <branding>
    <color type="primary" scheme_preference="light">#d69b6a</color>
    <color type="primary" scheme_preference="dark">#4d3928</color>
  </branding>

  <description>
    <p>Simple notifier app with support for Github, Gitea and Forgejo.</p>
  </description>

  <content_rating type="oars-1.1" />

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/rafaelmardojai/forge-sparks/main/data/screenshots/1.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/rafaelmardojai/forge-sparks/main/data/screenshots/2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/rafaelmardojai/forge-sparks/main/data/screenshots/3.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.3.0" date="2024-04-02">
      <description translate="no">
        <ul>
          <li>Added GitLab support</li>
          <li>Include notification referrer for GitHub to trigger the notification shelf</li>
          <li>Use new GNOME 46 adaptive dialogs</li>
          <li>Bug fixes</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2023-09-20">
      <description translate="no">
        <ul>
          <li>Improved initial view</li>
          <li>Accounts management moved to a separate window</li>
          <li>Minimum improvements to the UI</li>
          <li>Bug fixes</li>
          <li>Now part of GNOME Circle</li>
        </ul>
      </description>
    </release>
    <release version="0.1.1" date="2023-05-29">
      <description translate="no">
        <p>Minimal improvements and fixes.</p>
      </description>
    </release>
    <release version="0.1.0" date="2023-05-26">
      <description translate="no">
        <p>Initial release.</p>
        <ul>
          <li>Support for Forgejo</li>
          <li>Support for Gitea</li>
          <li>Support for GitHub</li>
        </ul>
      </description>
    </release>
  </releases>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>
</component>
